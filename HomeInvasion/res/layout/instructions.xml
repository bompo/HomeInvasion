<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/home_root" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<LinearLayout style="@style/TitleBar">
		<ImageView style="@style/TitleBarLogo"
			android:contentDescription="@string/description_logo" android:src="@drawable/title_logo" />

		<View style="@style/TitleBarSpring" />
	</LinearLayout>

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:padding="6dip" android:background="@color/background1">

		<TextView android:paddingTop="20dip" android:text="PacMap is a location-based game. To play the game you need a GPS signal and a working internet connection. There also have to be some roads nearby."
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

		<TextView android:text="Your goal is to catch all the dots. For each dot you will get a point. But beware! Ghosts will try to catch you. Try to avoid them as long as possible."
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			
		<TextView android:paddingTop="20dip" android:textStyle="bold" android:text="WARNING!"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<TextView android:text="Don't play this game on a busy road! Don't put yourself in danger! Obey the traffic rules and regulations!"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	</LinearLayout>

</LinearLayout>
