<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/home_root" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent">

	<LinearLayout style="@style/TitleBar">
		<ImageView style="@style/TitleBarLogo"
			android:contentDescription="@string/description_logo" android:src="@drawable/title_logo" />

		<View style="@style/TitleBarSpring" />
	</LinearLayout>

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:padding="6dip" android:background="@color/background1">

		<TextView android:paddingTop="20dip" android:text="Aliens invade your neighborhood and you are one of them! You control your spaceship by actual walking outside in your neighborhood. To play the game you need a constant GPS signal and a working internet connection and some nearby roads."
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

		<TextView android:text="Your mission is to destroy all the targets that your overlords have placed. Those are indicated through green glowing dots. To destory them you have to get them into your laser range. For each destroyed target you will get a point. But beware! Military is informed and trys to stop you. Don't get into the fire range of the tanks or they will destroy you."
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			
		<TextView android:paddingTop="20dip" android:textStyle="bold" android:text="WARNING!"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<TextView android:text="Don't play this game on a busy road or while driving! Don't put yourself in danger! Obey the traffic rules and regulations!"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	</LinearLayout>

</LinearLayout>
